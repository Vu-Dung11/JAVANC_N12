<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Hotel Image + Heart -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgHotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/signup_homstay_img"
            android:background="@drawable/image_rounded_corner" />
    </FrameLayout>

    <!-- Right Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Hotel name -->
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang An Mountain House"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000" />

        <!-- Location and map -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ninh Bình"
                android:textColor="#0066CC"
                android:textSize="12sp"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/txtMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem bản đồ"
                android:textColor="#0066CC"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cách trung tâm 6,6km"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang An Mountain House là chỗ nghỉ nhà dân, mang đến cảm giác gần gũi, thân quen."
            android:textSize="12sp"
            android:textColor="#444444"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

        <!-- Price and rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350,000 - 700,000đ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="4 ★"
                android:textSize="14sp"
                android:textColor="#FFD700"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
