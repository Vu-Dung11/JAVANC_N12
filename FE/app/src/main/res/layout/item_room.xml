<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Room Image -->
        <ImageView
            android:id="@+id/imgRoom_Item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_1"
            android:background="@drawable/image_rounded_corner" />

        <!-- Room Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Room ID -->
            <TextView
                android:id="@+id/txtRoomId_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phòng: R001"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp" />

            <!-- Room Name -->
            <TextView
                android:id="@+id/txtRoomName_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên phòng: Phòng Deluxe"
                android:textColor="#0066CC"
                android:textSize="12sp"
                android:paddingTop="2dp" />

            <!-- Room Type -->
            <TextView
                android:id="@+id/txtRoomType_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại phòng: Đơn"
                android:textColor="#555555"
                android:textSize="12sp"
                android:paddingTop="2dp" />

            <!-- Room Price -->
            <TextView
                android:id="@+id/txtRoomPrice_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá phòng: 500.000 VNĐ"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>