<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Homestay Image -->
        <ImageView
            android:id="@+id/imgHomestay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_1"
            android:background="@drawable/image_rounded_corner" />

        <!-- Homestay Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Homestay Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homestay Cao Cấp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp" />

            <!-- Address -->
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 Đường Võ Nguyên Giáp, Đà Nẵng"
                android:textColor="#0066CC"
                android:textSize="12sp"
                android:paddingTop="2dp" />

            <!-- Check-in Date -->
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày nhận phòng: 24/04/2025"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:paddingTop="2dp" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 1.500.000 USD"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="6dp" />

            <!-- Deposit -->
            <TextView
                android:id="@+id/txtDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền cọc: 300.000 USD"
                android:textColor="#000000"
                android:textSize="12sp"
                android:paddingTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>