<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgHomestay"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/image_1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:background="@color/light_blue">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homestay Cao Cấp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99 Đường Võ Nguyên Giáp, Đà Nẵng"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày nhận phòng: 24/04/2025"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 1.500.000 VNĐ"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền cọc: 300.000 VNĐ"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
